<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2>Detalles del Servicio</h2>
          <div>
            <%= link_to 'Editar', edit_service_path(@service), class: 'btn btn-warning' %>
            <%= link_to 'Volver', services_path, class: 'btn btn-secondary' %>
          </div>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-4"><strong>Cliente:</strong></div>
            <div class="col-md-8"><%= @service.client %></div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4"><strong>Vehículo:</strong></div>
            <div class="col-md-8"><%= @service.vehicle %></div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4"><strong>Descripción:</strong></div>
            <div class="col-md-8"><%= @service.description %></div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4"><strong>Estado:</strong></div>
            <div class="col-md-8">
              <span class="badge badge-<%= @service.status == 'completado' ? 'success' : 
                                       @service.status == 'en_proceso' ? 'warning' : 
                                       @service.status == 'entregado' ? 'info' : 'secondary' %>">
                <%= @service.status.humanize %>
              </span>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4"><strong>Fecha de Entrega:</strong></div>
            <div class="col-md-8"><%= @service.delivery_date.strftime('%d/%m/%Y') %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
