<div class="welcome-container">
  <div class="welcome-content">
    <div class="welcome-text">
      <h1>Bienvenido a JSAuto</h1>
      <p class="lead">Sistema de Gestión de Tickets de Servicio</p>
      <div class="welcome-features">
        <div class="feature">
          <i class="fas fa-ticket-alt"></i>
          <h3>Gestión de Tickets</h3>
          <p>Administra tus servicios de manera eficiente</p>
        </div>
        <div class="feature">
          <i class="fas fa-chart-line"></i>
          <h3>Seguimiento</h3>
          <p>Monitorea el progreso en tiempo real</p>
        </div>
        <div class="feature">
          <i class="fas fa-users"></i>
          <h3>Colaboración</h3>
          <p>Trabajo en equipo simplificado</p>
        </div>
      </div>
    </div>

    <div class="auth-buttons">
      <% if user_signed_in? %>
        <%= link_to authenticated_root_path, class: 'btn btn-primary btn-lg' do %>
          <i class="fas fa-arrow-right"></i> Ir al Sistema
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger btn-lg' do %>
          <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: 'btn btn-primary btn-lg' do %>
          <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
        <% end %>
      <% end %>
    </div>
  </div>
</div>
